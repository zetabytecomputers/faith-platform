<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Images Â· <%= (typeof brand!=='undefined'?brand:'Jesus Is The Christ') %></title>
</head>
<body>
  <%- include('partials/header') %>

  <main class="wrap">
    <section class="hero hero--sm">
      <h1>Images</h1>
      <p>Visuals that uplift and inspire.</p>
    </section>

    <section class="section">
      <% 
        var itemsList = (typeof items !== 'undefined' && Array.isArray(items) && items.length)
          ? items
          : ((typeof imagesItems !== 'undefined' && Array.isArray(imagesItems) && imagesItems.length) ? imagesItems : []);
      %>
      <div class="grid cols-3" style="margin-top:10px">
        <% itemsList.forEach(function(img){ %>
          <a class="thumb" href="<%= (img && img.href) ? img.href : '#' %>">
            <span><%= (img && img.title) ? img.title : '' %></span>
          </a>
        <% }) %>
      </div>
    </section>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
